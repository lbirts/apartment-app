<h1>Edit your apartment info</h1>
<form action="/apartments/<%= @apartment.id%>" method="post">
<input type="hidden" name="_method" value="patch">

<h4>Address</h4>
<input type="text" name="apartment[address]" value="<%= @apartment.address%>">

<h5> Existing Tenants </h5>
    <% @tenants.each do |tenant| %>
        <input type="checkbox" name="apartment[tenant_ids][]" value="<%=tenant.id%>" <%="checked" if @apartment.tenants.include?(tenant) %>><%=tenant.name%>
    <% end %>
<br><br>
<label>Add a new tenant:</label>
<input type="text" name="tenant[name]">

<input type="submit" value="submit">