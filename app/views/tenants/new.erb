<h1>Create a new tenant!</h1>

<form action="/tenants" method="post">

<label>Name</label>
<input type="text" name="tenant[name]">

<label>Address:</label>
<select name="tenant[apartment_id]">
    <option disables selected value> -- select an option -- </option>
    <% @apartments.each do |apartment| %>
        <option value="<%= apartment.id%>">
        <%= apartment.address %>
        </option>
    <% end %>
</select>

<input type="submit">

</form>